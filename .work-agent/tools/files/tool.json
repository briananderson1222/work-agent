{
  "id": "files",
  "kind": "mcp",
  "displayName": "File System",
  "description": "Read and write files using MCP filesystem server",
  "transport": "stdio",
  "command": "npx",
  "args": ["-y", "@modelcontextprotocol/server-filesystem", "/mnt/e/dev/work-agent"],
  "permissions": {
    "filesystem": true,
    "allowedPaths": ["/mnt/e/dev/work-agent", "~/"]
  },
  "timeouts": {
    "startupMs": 5000,
    "requestMs": 30000
  },
  "exposedTools": ["read_file", "write_file", "list_directory"]
}

{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Work Agent",
  "version": "0.1.0",
  "identifier": "dev.voltagent.work-agent",
  "build": {
    "beforeDevCommand": "npm run dev:ui",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build && npm run build:ui",
    "frontendDist": "../dist-ui"
  },
  "app": {
    "windows": [
      {
        "title": "Work Agent",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../dist": "dist",
      "../.work-agent": ".work-agent",
      "../schemas": "schemas",
      "../node_modules/fsevents": "node_modules/fsevents"
    }
  }
}
